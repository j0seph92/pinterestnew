<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <!-- Tailwind CSS -->

    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Custom CSS -->
    <style>
      /* Add any custom styles here */
    </style>
  </head>

  <body class="bg-gray-100">
    <% if(nav === true){%>
    <!-- Header -->
    <header class="bg-white shadow-md p-4">
      <div class="container mx-auto flex justify-between items-center">
        <!-- Logo -->
        <h1 class="text-2xl font-bold text-red-500">Pinterest</h1>
        <!-- Navigation -->
        <nav>
          <ul class="flex space-x-4">
            <li>
              <a href="#" class="text-gray-600 hover:text-gray-900">Home</a>
            </li>
            <li>
              <a href="/feeds" class="text-gray-600 hover:text-gray-900"
                >Feeds</a
              >
            </li>
            <li>
              <a href="#" class="text-gray-600 hover:text-gray-900">Likes</a>
            </li>
            <!-- Add more navigation links as needed -->
          </ul>
        </nav>
        <!-- User Profile -->
        <div>
          <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded-md">
            Sign Out
          </a>
        </div>
      </div>
    </header>
    <% } %>

    <!-- Main Content -->
    <main class="container mx-auto mt-4">
      <!-- Profile Header -->
      <div
        class="bg-white shadow-md rounded-md p-4 flex items-center justify-between"
      >
        <form
          hidden
          id="uploadform"
          action="/fileupload"
          method="post"
          enctype="multipart/form-data"
        >
          <input type="file" name="image" />
        </form>
        <div class="flex items-center">
          <!-- User Avatar -->
          <div class="relative mr-4">
            <span
              id="uploadicon"
              class="absolute w-6 h-6 bg-zinc-200 flex rounded-full justify-center bottom-0 right-0 cursor-pointer"
              ><i class="ri-pencil-line"></i
            ></span>
            <img
              src="/images/uploads/<%= user.profileImage %>"
              alt="User Avatar"
              class="w-20 h-20 rounded-full object-cover"
            />
          </div>
          <!-- User Info -->
          <div>
            <h2 class="text-xl font-semibold"><%= user.email%></h2>
            <h5 class="text-base font-light">@<%= user.username%></h5>
            <p class="text-gray-600">123 Followers | 456 Following</p>
            <p class="text-gray-600">Joined: January 1, 2023</p>
            <!-- Add more user info as needed -->
          </div>
        </div>
        <div>
          <a
            href="/add"
            class="bg-red-500 text-white px-4 py-2 rounded-md mr-5"
          >
            Add Post
          </a>
          <a href="#" class="bg-red-500 text-white px-4 py-2 rounded-md">
            Edit Profile
          </a>
        </div>
      </div>

      <!-- User's Pins -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
        <!-- Pin Cards -->
        <% user.posts.forEach(function(post){ %>
        <div class="bg-white shadow-md rounded-md p-4">
          <!-- Pin Image -->
          <img
            src="/images/uploads/<%= post.pinImage %>"
            alt="Pin"
            class="w-full rounded-md mb-2"
          />
          <!-- Pin Title -->
          <h2 class="text-lg font-semibold mb-1"><%= post.pinTitle %></h2>
          <!-- Pin Description -->
          <p class="text-gray-600"><%= post.pinDescription %></p>
          <p class="text-gray-900"><%= user.posts.length %> Pin</p>
          <!-- Pin Meta -->
          <div class="flex items-center mt-2">
            <!-- User Avatar -->
            <img
              src="/images/uploads/<%= user.profileImage %>"
              alt="User Avatar"
              class="w-8 h-8 rounded-full"
            />
            <!-- Username -->
            <p class="text-gray-700 ml-2"><%= user.username%></p>
          </div>
        </div>
        <% }) %>
        <!-- Repeat this card structure for other pins -->
      </div>
    </main>
    <script>
      document
        .querySelector("#uploadicon")
        .addEventListener("click", function () {
          document.querySelector("#uploadform input").click();
        });
      document
        .querySelector("#uploadform")
        .addEventListener("change", function () {
          document.querySelector("#uploadform").submit();
        });
    </script>
  </body>
</html>
